extends ../layout

block content
  h1 New task view
  p
    a(href='/tasks/new', class='btn btn-primary') Add a Task

  form(role='form', method='post', action='/tasks')
    fieldset
      legend Add a task
      div.clearfix
        label Task
        div.input
          input(name='task[task]', class='xlarge')
        div.actions
          input(type='submit', value='Save', class='btn primary')
        button(type='reset', class='btn') Cancel